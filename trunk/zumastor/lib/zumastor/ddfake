# if enabled, define functions to override the actual commands
[[ $DDFAKE = yes ]] || return

function dmsetup {
	case $1 in
	create)
		local args
		read args
		echo dmsetup create $2 $args
		;;
	remove)
		echo dmsetup remove $2
		;;
	*)
		return 1
		;;
	esac
}

function ddsnap {
	case $1 in
	create|delete|server|agent)
		echo ddsnap "$@"
		;;
	status)
		case $3 in
		--size)
			echo 12345
			;;
		--list)
			echo 0 1
			;;
		--last)
			echo 1
			;;
		*)
			return 1
			;;
		esac
		;;
	*)
		return 1
		;;
	esac
}

function mount {
	case $1 in
*)
	echo mount $@
	return 0
	;;
	esac
}

function umount {
	case $1 in
*)
	echo umount $@
	return 0
	;;
	esac
}
