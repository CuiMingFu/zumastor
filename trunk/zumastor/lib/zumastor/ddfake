# if enabled, don't run the actual commands
if [ X"$DDFAKE" = X"yes" ]; then

function dmsetup {
	case $1 in
	create)
		read args
		echo dmsetup create $2 $args
		;;
	remove)
		echo dmsetup remove $2
		;;
	*)
		return 1
		;;
	esac
}

function ddsnap {
	case $1 in
	create|delete|server|agent)
		echo ddsnap "$@"
		;;
	status)
		case $3 in
		--size)
			echo 12345
			;;
		--list)
			echo 101 102 103
			;;
		--last)
			echo 103
			;;
		*)
			return 1
			;;
		esac
		;;
	*)
		return 1
		;;
	esac
}

fi
